<header>
  <nav class="navbar navbar-expand-sm border-bottom">
    <div class="container">
      <!-- Toggler button for mobile views -->
      <button
        class="navbar-toggler ms-auto"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbar-collapse"
        aria-controls="navbar"
        aria-expanded="false"
        aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <!-- Navbar content (logo and links) -->
      <div class="collapse navbar-collapse" id="navbar-collapse">
        <!-- Logo and primary navigation links -->
        <a class="navbar-brand" href="/home">
          <img src="../../resources/img/Beehive_Logo.png" alt="Beehive Logo" width="30" height="24">
        </a>
        <ul class="navbar-nav me-auto">
          <li class="nav-item"><a class="nav-link" href="/home">Home</a></li>
          <li class="nav-item"><a class="nav-link" href="/discover">Discover</a></li>
          {{#if logged_in_username}}  <!-- This snippet is because the profile page does not render the user variable -->
              <li class="nav-item"><a class="nav-link" href="/profile">Profile</a></li>
          {{else}}
            {{#if user}}
              <li class="nav-item"><a class="nav-link" href="/profile">Profile</a></li>
            {{/if}}
          {{/if}}
        </ul>

        <!-- Login/Register/Logout buttons -->
        <div class="navbar-nav ms-auto">
          {{#if logged_in_username}} <!-- again, this snippet is because the profile page does not render user -->
              <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
          {{else}}
            {{#if user}}
              <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
            {{else}}
              <li class="nav-item"><a class="nav-link" href="/register">Register</a></li>
              <li class="nav-item"><a class="nav-link" href="/login">Login</a></li>
            {{/if}}
          {{/if}}
        </div>
      </div>
    </div>
  </nav>
</header>