<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Review - BookHive</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <header>
        <nav>
            <ul>
                <li><a href="/home">Home</a></li>
                <li><a href="/discover">Discover</a></li>
                <li><a href="/profile">Profile</a></li>
                <li><a href="/logout">Logout</a></li>
            </ul>
        </nav>
    </header>

    <main>
        <section class="book-details">
            <h1>{{book.title}}</h1>
            <p><strong>Author:</strong> {{book.author}}</p>
            <p><strong>Genre:</strong> {{book.genre}}</p>
            <p>{{book.description}}</p>
        </section>

        <section class="review-section">
            <h2>Write a Review</h2>
            <form action="/book/{{book.id}}/review" method="POST">
                <label for="rating">Rating (1-5)</label><br>
                <input type="number" id="rating" name="rating" min="1" max="5" required><br>
                
                <label for="reviewText">Your Review</label><br>
                <textarea id="reviewText" name="reviewText" rows="4" required></textarea><br>
                
                <input type="submit" value="Submit Review">
            </form>
        </section>

        <section class="existing-reviews">
            <h2>User Reviews</h2>
            {{#if reviews.length}}
                <ul>
                    {{#each reviews}}
                        <li>
                            <strong>{{this.user}}</strong> - Rating: {{this.rating}}/5
                            <p>{{this.reviewText}}</p>
                        </li>
                    {{/each}}
                </ul>
            {{else}}
                <p>No reviews for this book yet. Be the first to review!</p>
            {{/if}}
        </section>
    </main>

</body>

