<body>

    <main class="ms-3">
        <section class="welcome-section">
            <h1>Welcome to BookHive!</h1>
            <p>Your go-to platform for sharing and discovering book reviews.</p>
        </section>

        <section class="featured-books">
            <h2>Featured Books</h2>
            {{#if featuredBooks.length}}
                <ul>
                    {{#each featuredBooks}}
                        <li class="book-card">
                            <img src="{{this.cover_image}}" alt="{{this.title}} Cover" class="book-cover">
                            <div class="book-info">
                                <h3>{{this.title}}</h3>
                                <p>{{this.author}}</p>
                                <a href="/book/{{this.id}}" class="btn">View Details</a>
                            </div>
                        </li>
                    {{/each}}
                </ul>
            {{else}}
                <p>No featured books at the moment. Check back later!</p>
            {{/if}}
        </section>

        <section class="top-reviews">
            <h2>Top-Rated Reviews</h2>
            {{#if topReviews.length}}
                <ul>
                    {{#each topReviews}}
                        <li>
                            <h3>{{this.bookTitle}}</h3>
                            <p><strong>{{this.user}}:</strong> {{this.reviewText}}</p>
                            <p>Rating: {{this.rating}}/5</p>
                        </li>
                    {{/each}}
                </ul>
            {{else}}
                <p>No top reviews available right now.</p>
            {{/if}}
        </section>
    </main>

